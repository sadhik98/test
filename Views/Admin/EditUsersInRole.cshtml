@using SchoolOnlineExamination.Models
@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
}
<link href="~/css/EditUsersInRole.css" rel="stylesheet" />
<form method="post">
    <div class="card">
        <div class="card-header">
            <center><h2>Add Or Remove Users From This Role</h2></center>
        </div>
        <div class="card-body">
            <center>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </div>
                }
            </center>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-success" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-danger" style="width:auto">Cancel</a>
        </div>
    </div>
</form>